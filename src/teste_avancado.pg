inteiro x;
inteiro contador;
real resultado;

leia x;
contador = 1;
resultado = 0;

enquanto contador <= x faça
    se contador % 2 == 0 então
        resultado = resultado + contador * 1.5;
    senão
        resultado = resultado + contador * 2;
    fim-se
    contador = contador + 1;
fim-se

imprima ("Resultado final:");
imprima resultado;
